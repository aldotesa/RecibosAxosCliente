@using System.Configuration;

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ClienteRecibosAxos</title>

    <link href="~/Scripts/Vendor/bootstrap-4.4.1-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Login/Login.css" rel="stylesheet" />
    <link href="~/Scripts/Vendor/devextreme/Lib/css/dx.common.css" rel="stylesheet" />
    <link href="~/Scripts/Vendor/devextreme/Lib/css/dx.light.css" rel="stylesheet" />
    <link href="~/Scripts/Vendor/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/Scripts/Vendor/fontawesome-free-5.12.0-web/css/all.css" rel="stylesheet" />
    <link href="~/Content/default.css" rel="stylesheet" />
</head>
<body>
    <input id="hfUrlApi" type="hidden" value='@ConfigurationManager.AppSettings["UrlApi"]' />
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            <img src="~/Content/Images/surface1.svg" width="30" height="30" alt="" />
        </a>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Opciones
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="dropdown-item" href="/Recibo/RecibosGlobales">Recibos Totales</a>
                        }
                        <a class="dropdown-item" href="/Recibo">Mis recibos</a>
                        <a class="dropdown-item" href="/Recibo/Register">Agregar Recibo</a>
                    </div>
                </li>

            </ul>

        </div>
        @if (User.Identity.IsAuthenticated)
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-inline" }))
            {
                @Html.AntiForgeryToken()
                <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Cerrar Sesión</button>
            }

        }
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <script src="~/Scripts/Vendor/Jquery/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/Vendor/bootstrap-4.4.1-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/Vendor/devextreme/Lib/js/dx.all.js"></script>
    <!--Esta libreria permite hacer grids optimizados-->
    <script src="~/Scripts/Vendor/devextreme-aspnet-data/js/dx.aspnet.data.js"></script>
    <script src="~/Scripts/Vendor/toastr/toastr.min.js"></script>
    <script src="~/Scripts/Vendor/fontawesome-free-5.12.0-web/js/all.js"></script>
    <script src="~/Scripts/Vendor/moment/moment.js"></script>
    <script src="~/Scripts/Vendor/moment-timezone/moment-timezone.js"></script>
    <script src="~/Scripts/default.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
