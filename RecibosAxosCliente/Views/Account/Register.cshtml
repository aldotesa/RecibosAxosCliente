@model RecibosAxosCliente.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="login row">
    <div class="col-12 pb-1">
        <p class="text-center text-light" id="text">
            Registrate
        </p>
    </div>
    <div class="col-12 text-center">
        <p id="textoBienvenida">
            Crea una cuenta para registrar recibos y realiar la administración de estos
        </p>
    </div>
    <div class="col-12 pt-4">
        <div class="form-group">
            <div id="input-container">
                <div id="txtUsername"></div>
                <i class="fas fa-user icon-component"></i>
            </div>
        </div>
        <div class="form-group">
            <div id="input-container">
                <div id="txtPassword" class="dev-icon">
                </div>
                <i class="fas fa-key icon-component"></i>
            </div>
        </div>
    </div>
    <div class="col-12 text-center pt-4">
        <div id="btnRegistrar"></div>
    </div>
    <div class="col-12 text-center pt-4">
        <a href="/Account/Login" id="textLink">
            ¿Ya cuentas con una cuenta ingresa aquí?
        </a>
    </div>
    <div id="footer" class="col-12">
        <div class="row">
            <div class="col-6 text-left">
                <a id="spam1">Términos y Condiciones</a>
            </div>
            <div class="col-6 text-right">
                <a id="spam2">Acerca de nosotros</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/Client/Account/Register.js"></script>
}
